

# Define colors (optional fallback for non-TTY)
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}=======================================${NC}"
echo -e "${BLUE}üîç  Running PRE-COMMIT checks...      ${NC}"
echo -e "${BLUE}=======================================${NC}"

# Lint
echo -e "\n${BLUE}üìù  Validating code style (Lint)...${NC}"
if npm run lint; then
    echo -e "${GREEN}‚úì Lint passed${NC}"
else
    echo -e "${RED}‚ùå Lint failed. Please fix the errors above.${NC}"
    exit 1
fi

# Typecheck
echo -e "\n${BLUE}üî∑  Checking TypeScript types...${NC}"
if npm run typecheck; then
    echo -e "${GREEN}‚úì Typecheck passed${NC}"
else
    echo -e "${RED}‚ùå Typecheck failed. Please fix the type errors above.${NC}"
    exit 1
fi

echo -e "\n${GREEN}=======================================${NC}"
echo -e "${GREEN}‚úÖ  All pre-commit checks passed!     ${NC}"
echo -e "${GREEN}=======================================${NC}"
